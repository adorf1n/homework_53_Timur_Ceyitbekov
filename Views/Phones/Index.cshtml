@model List<Phone>

@{
    ViewBag.Title = "Мобильные телефоны";
}

<h2>Мобильные телефоны</h2>

<a asp-action="Add" asp-controller="Phones">Добавить смартфон</a>

<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>Смартфоны еще не добавлены</p>
    }
    else
    {
        <table style="width: 100%;">
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Компания</th>
                <th>Стоимость</th>
                <th>Описание</th>
                <th>Перейти на сайт производителя</th>
            </tr>
            @foreach (var phone in @Model)
            {
                <tr>
                    <td>@phone.Id</td>
                    <td>@phone.Name</td>
                    <td>@phone.Company</td>
                    <td>@phone.Price</td>
                    <td>
                        <a asp-action="DownloadDescription" asp-route-company="@phone.Company">Скачать описание</a>
                    </td>
                    <td>
                        <a asp-action="RedirectToManufacturer" asp-controller="Phones" asp-route-company="@phone.Company">Перейти на сайт производителя</a>

                    </td>
                    <td><a asp-action="Edit" asp-route-id="@phone.Id" class="btn btn-warning">Редактировать</a></td>
                    <td><a asp-action="Delete" asp-route-id="@phone.Id" onclick="return confirm('Вы уверены, что хотите удалить этот телефон?');">Удалить</a></td>
                </tr>
            }
        </table>
    }
</div>
